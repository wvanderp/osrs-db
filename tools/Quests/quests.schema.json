{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "OSRS-DB/quests.schema.json",
    "title": "Quests",
    "description": "A schema for quests parsed from RuneLite's Quest enum.",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "integer",
                "description": "RuneLite quest ID used by script engine"
            },
            "enum": {
                "type": "string",
                "description": "Enum constant name in RuneLite's Quest.java"
            },
            "name": {
                "type": "string",
                "description": "Display name of the quest"
            }
        },
        "required": [
            "id",
            "enum",
            "name"
        ],
        "additionalProperties": false
    }
}