{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "id",
        "name",
        "requirements"
    ],
    "properties": {
        "id": {
            "type": "integer",
            "description": "The unique identifier of the item"
        },
        "name": {
            "type": "string",
            "description": "The name of the item"
        },
        "requirements": {
            "type": "array",
            "description": "Array of requirements for wearing this item",
            "items": {
                "oneOf": [
                    {
                        "description": "A level requirement for an item",
                        "type": "object",
                        "required": [
                            "type",
                            "skill",
                            "level"
                        ],
                        "properties": {
                            "type": {
                                "type": "string",
                                "const": "level",
                                "description": "Level requirement type"
                            },
                            "skill": {
                                "type": "string",
                                "enum": [
                                    "attack",
                                    "defence",
                                    "strength",
                                    "ranged",
                                    "magic",
                                    "prayer"
                                ],
                                "description": "The skill required"
                            },
                            "level": {
                                "type": "integer",
                                "minimum": 1,
                                "maximum": 99,
                                "description": "The required level in the specified skill"
                            },
                            "note": {
                                "type": "string",
                                "description": "An optional note about the requirement"
                            }
                        },
                        "additionalProperties": false
                    },
                    {
                        "description": "A quest requirement for an item",
                        "type": "object",
                        "required": [
                            "type",
                            "quest"
                        ],
                        "properties": {
                            "type": {
                                "type": "string",
                                "const": "quest",
                                "description": "Quest requirement type"
                            },
                            "quest": {
                                "$ref": "../Quests/QuestList.schema.json",
                                "description": "The quest required"
                            },
                            "note": {
                                "type": "string",
                                "description": "An optional note about the requirement"
                            }
                        },
                        "additionalProperties": false
                    },
                    {
                        "description": "A game mode requirement for an item",
                        "type": "object",
                        "required": [
                            "type",
                            "gameMode"
                        ],
                        "properties": {
                            "type": {
                                "type": "string",
                                "const": "gameMode",
                                "description": "Game mode requirement type"
                            },
                            "gameMode": {
                                "type": "string",
                                "enum": [
                                    "Raging Echoes League",
                                    "Grid Master"
                                ],
                                "description": "The game mode required"
                            },
                            "note": {
                                "type": "string",
                                "description": "An optional note about the requirement"
                            }
                        },
                        "additionalProperties": false
                    },
                    {
                        "description": "Required equipment needed when using this item",
                        "type": "object",
                        "required": [
                            "type",
                            "equipment"
                        ],
                        "properties": {
                            "type": {
                                "type": "string",
                                "const": "equipment",
                                "description": "Equipment requirement type"
                            },
                            "equipment": {
                                "type": "array",
                                "description": "Array of equipment item IDs required. when multiple items are listed, any one of them can satisfy the requirement.",
                                "items": {
                                    "type": "integer"
                                }
                            },
                            "note": {
                                "type": "string",
                                "description": "An optional note about the requirement"
                            }
                        },
                        "additionalProperties": false
                    }
                ]
            }
        }
    },
    "additionalProperties": false
}
