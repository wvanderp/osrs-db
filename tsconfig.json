{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2021"
    ],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "collect/**/*.ts",
    "tools/**/*.ts",
    "common/**/*.ts"
  ]
}
